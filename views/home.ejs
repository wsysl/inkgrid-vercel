<%- include('partials/header') %>

<div class="row">
    <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <a href="/post/<%= post.id %>">
                        <%# 【已修改】: 使用 if/else 判断是否有图片 %>
                        <% if (post.featuredImage) { %>
                            <img src="<%= post.featuredImage %>" class="card-img-top" alt="<%= post.title %>" style="height: 200px; object-fit: cover;">
                        <% } else { %>
                            <%# 如果没有图片，显示一个灰色占位图 %>
                            <img src="https://via.placeholder.com/400x250.png?text=No+Image" class="card-img-top" alt="No image available" style="height: 200px; object-fit: cover;">
                        <% } %>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><a href="/post/<%= post.id %>" class="text-dark text-decoration-none"><%= post.title %></a></h5>
                        <p class="card-text"><small class="text-muted">作者: <%= post.username %></small></p>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12 text-center">
            <p class="lead">您还没有发表任何文章。</p>
            <a href="/post/new" class="btn btn-primary">现在就去写第一篇！</a>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>